<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-sm-6">
        <h2>Recent Posts</h2>
      </div>
      <div class="col-sm-6" id="newPost">
        {{new-post savePost="savePost"}}
      </div>
    </div>
    {{#each model.posts as |post|}}
      {{post-tile post=post}}
    {{/each}}
  </div>
  <div class="col-md-4">
    <h2>Posts List</h2>
    <div class="well">
      {{#each model.posts as |post|}}
        {{list-tile post=post}}
      {{/each}}
    </div>
  </div>
</div>
