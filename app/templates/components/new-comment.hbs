{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="commentName"}}
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        {{textarea value=body id="commentBody"}}
      </div>
      <button {{action 'saveComment' model}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
